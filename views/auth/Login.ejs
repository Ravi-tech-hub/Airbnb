<%- include('../partial/head') %>
  </head>

  <body>
    <%- include('../partial/header') %>
      <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md pt-20">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Login With your Info</h1>
        <%- include('../partial/error')%>
          <form action="/login" method="POST" required class="max-w-md mx-auto">
            <input type="email" name="email" value="<%= oldInput.email%>" placeholder="Enter your Email"
              class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
            <input type="password" name="password" required placeholder="Enter your password"
              class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
            <input type="submit" value="Login"
              class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
          </form>
      </main>
  </body>

  </html>