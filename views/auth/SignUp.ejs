<%- include('../partial/head') %>
  </head>

  <body class="bg-gray-100">
    <%- include('../partial/header') %>
      <main class="flex items-center justify-center min-h-screen pt-20 px-4">
        <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-8">
          <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Create Your Account</h1>
          <p class="text-center text-gray-500 mb-6">Join us and start exploring homes or hosting today!</p>
          <form action="/signup" method="POST" class="space-y-4">
            <%- include('../partial/error') %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <input type="text" name="firstName" value="<%= oldInput.firstName %>" required placeholder="First Name"
                  class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                <input type="text" name="lastName" value="<%= oldInput.lastName %>" placeholder="Last Name"
                  class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
              </div>
              <input type="email" name="email" value="<%= oldInput.email %>" required placeholder="Email"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
              <input type="password" name="password" required placeholder="Password"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
              <input type="password" name="confirmPassword" required placeholder="Confirm Password"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
              <div>
                <p class="font-medium mb-2 text-gray-700">Register As:</p>
                <div class="flex space-x-6">
                  <label class="inline-flex items-center">
                    <input type="radio" name="usertype" value="Guest" class="mr-2" required>
                    Guest
                  </label>
                  <label class="inline-flex items-center">
                    <input type="radio" name="usertype" value="Host" class="mr-2" required>
                    Host
                  </label>
                </div>
              </div>
              <label class="inline-flex items-start">
                <input type="checkbox" name="terms" required class="mt-1 mr-2">
                <span class="text-sm text-gray-600">
                  I agree to the
                  <a href="/terms" class="text-red-500 font-medium hover:underline">Terms & Conditions</a>
                </span>
              </label>
              <button type="submit"
                class="w-full bg-red-500 text-white py-3 rounded-lg font-medium hover:bg-red-600 transition duration-300">
                Sign Up
              </button>
          </form>
          <p class="text-center text-sm text-gray-600 mt-6">
            Already have an account?
            <a href="/login" class="text-red-500 font-medium hover:underline">Login</a>
          </p>
        </div>
      </main>
  </body>

  </html>